{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@boot/*": ["src/boot/*"],
      "@ctrl/*": ["src/ctrl/*"],
      "@util/*": ["src/util/*"],
      "@err/*": ["src/err/*"],
      "@bll/*": ["src/provider/bll/*"],
      "@dal/*": ["src/provider/dal/*"],
      "@ext/*": ["src/ext/*"],
      "@test/*": ["src/test/*"],
      "@src/*": ["src/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
  
}